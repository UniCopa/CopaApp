<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    style="@style/background" >

    <TextView
        android:id="@+id/subscription_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="all details of one SingleEvent"
        style="@style/text_title" />

    <Button
        android:id="@+id/allSingleEventsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/subscription_text"
        android:layout_below="@+id/subscription_text"
        android:layout_marginTop="42dp"
        android:onClick="onChangeDateButtonClick"
        android:text="@string/button_singleevent_change" />

</RelativeLayout>